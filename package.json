{
  "name": "electron-simple-boilerplate",
  "version": "0.0.1",
  "main": "./dist/main.js",
  "scripts": {
    "start": "electron .",
    "lint": "concurrently -n \"eslint,tslint\" -k \"npm run eslint\" \"npm run tslint\"",
    "eslint": "eslint --cache --format=node_modules/eslint-formatter-pretty .",
    "tslint": "tslint -t stylish ./app/**/*.ts",
    "dev": "cross-env PORT=9000 concurrently -k -n \"main,renderer\" \"npm run dev-main\" \"npm run dev-renderer\"",
    "dev-main": "cross-env HOT=1 NODE_ENV=development concurrently -k -n \"webpack,electron\" \"webpack --watch --config configs/webpack.main.config.js\" \"nodemon --watch dist/main.js --exec \\\"electron dist/main.js\\\"\"",
    "dev-renderer": "cross-env NODE_ENV=development webpack-dev-server --config configs/webpack.renderer.config.js",
    "build": "concurrently -n \"main,renderer\" \"npm run build-main\" \"npm run build-renderer\"",
    "build-main": "cross-env NODE_ENV=development webpack --config configs/webpack.main.config.js",
    "build-renderer": "cross-env NODE_ENV=development webpack --config configs/webpack.renderer.config.js",
    "prod": "concurrently -n \"main,renderer\" \"npm run prod-main\" \"npm run prod-renderer\"",
    "prod-main": "cross-env NODE_ENV=production webpack --config configs/webpack.main.prod.config.js",
    "prod-renderer": "cross-env NODE_ENV=production webpack --config configs/webpack.renderer.prod.config.js",
    "test": "jest"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/shimSetup.ts",
      "<rootDir>/test/enzymeSetup.ts"
    ],
    "modulePathIgnorePatterns": [
      "/resources/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.renderer.json"
      }
    }
  },
  "devDependencies": {
    "@types/chokidar": "^1.7.3",
    "@types/enzyme": "^3.1.6",
    "@types/fs-extra": "^4.0.4",
    "@types/jest": "^21.1.8",
    "@types/node": "^8.0.50",
    "@types/react": "^16.0.22",
    "@types/react-dom": "^16.0.3",
    "@types/shell-quote": "^1.6.0",
    "awesome-typescript-loader": "^3.3.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "bluebird": "^3.5.1",
    "concurrently": "^3.5.0",
    "cross-env": "^5.1.1",
    "electron": "1.7.9",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.10.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^21.2.1",
    "nodemon": "^1.12.1",
    "prettier": "^1.8.1",
    "ts-jest": "^21.2.4",
    "ts-loader": "^3.2.0",
    "tslint": "^5.8.0",
    "tslint-config-airbnb": "^5.4.2",
    "tslint-config-prettier": "^1.6.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-react": "^3.2.0",
    "typescript": "^2.6.1",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.4",
    "webpack-merge": "^4.1.1",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "chokidar": "^1.7.0",
    "fs-extra": "^4.0.2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-redux": "^4.0.8",
    "react-toastify": "^3.1.0",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "shell-quote": "^1.6.1",
    "toml": "^2.3.3"
  }
}
